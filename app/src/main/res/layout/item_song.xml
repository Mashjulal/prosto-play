<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView_itemSong_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:ems="8"
            android:maxLines="1"
            android:text="Sample Song"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_itemSong_artist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:ems="9"
            android:maxLines="1"
            android:text="Sample artist" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton_itemSong_add"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_action_add_song"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/imageButton_itemSong_delete"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_delete"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/imageButton_itemSong_download"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_marginEnd="50dp"
        android:src="@drawable/ic_download" />

    <TextView
        android:id="@+id/textView_itemSong_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton_itemSong_add"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/imageButton_itemSong_download"
        android:text="00:00" />

</RelativeLayout>